<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#346ef6"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/welcometxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GREETINGS!"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="40dp"
        android:fontFamily="@font/poppins_black"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register to proceed"
        android:layout_below="@id/welcometxt"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_medium" />

    <EditText
        android:id="@+id/nameinp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_marginTop="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:hint="Name"
        android:gravity="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:fontFamily="@font/poppins_medium"/>

    <EditText
        android:id="@+id/emailinp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameinp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:hint="Email"
        android:gravity="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:fontFamily="@font/poppins_medium"/>

    <EditText
        android:id="@+id/passinp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailinp"
        android:inputType="textPassword"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:hint="Password"
        android:gravity="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:fontFamily="@font/poppins_medium"/>

    <Button
        android:id="@+id/signbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_below="@id/passinp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="SIGN UP"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_medium"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/gsign"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/signbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/signbtn"
        android:layout_marginTop="70dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Already have an account?"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/loginbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#346ef6"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text=" Log In"
                android:clickable="true"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>